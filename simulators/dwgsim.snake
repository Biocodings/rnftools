rule sub_fq_dwgsim:
	output:
		temp(single_fq_fn("{name}","{batch_id}","dwgsim")),
		temp(dwgsim_output_files("{name}","{batch_id}"))
	input:
		PROG_DWGSIM,
		fasta_from_id,
		fasta_faidx_from_id,
	run:
		shell(
			"""
				{input[0]} -1 30 -2 0 -y 0 -C 1 {input[1]} tmp/{output[0]}
			"""
		)
		recode_dwgsim_reads(output[1],output[0],
			source=int(wildcards.batch_id),
			faidx=input[2])
